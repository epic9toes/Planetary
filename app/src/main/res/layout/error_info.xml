<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/error_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/error_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 404 error has occurred, please try again."
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@id/error_icon"
        app:layout_constraintStart_toStartOf="@id/error_icon"
        app:layout_constraintTop_toBottomOf="@id/error_icon" />

    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_accent"
        android:drawableStart="@drawable/restore"
        android:drawablePadding="5dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Retry"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@id/error_msg"
        app:layout_constraintStart_toStartOf="@id/error_msg"
        app:layout_constraintTop_toBottomOf="@id/error_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>